<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonDetailsActivity">


    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="143dp"
        android:layout_height="126dp"
        app:imageUrl=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/PokemonName"
        android:layout_width="170dp"
        android:layout_height="37dp"
        android:layout_marginBottom="592dp"
        android:gravity="center"
        android:text="Pokemon X"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/PlaySound"
        android:layout_width="98dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:text="Play Sound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PokemonName"
        app:layout_constraintTop_tobottonOf="@+id/PokemonName" />

    <TextView
        android:id="@+id/MoveCount"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="Move Count:"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlaySound"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/MoveCountValue"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_marginStart="36dp"
        android:text="Value"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MoveCount"
        app:layout_constraintTop_toBottomOf="@+id/PlaySound"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/PokemonTypes"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="Types:"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MoveCount"
        app:layout_constraintVertical_bias="0.366" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="156dp"
        android:layout_height="124dp"
        android:layout_marginStart="36dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PokemonTypes"
        app:layout_constraintTop_toBottomOf="@+id/MoveCountValue"
        app:layout_constraintVertical_bias="0.276">

        <TextView
            android:id="@+id/TypeValues"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="List of types"
            android:textSize="20dp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>